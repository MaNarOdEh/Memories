<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/addnewtodo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.addnewtodo.AddNewToDoFragment"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:text="Adding New!"
        android:layout_gravity="center"
        android:textSize="28sp"
        android:gravity="center"
        android:textColor="@color/colorAccent"
        android:fontFamily="cursive"
        />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choose What you wan't to save Please!!"
            android:gravity="center"
            android:textSize="25sp"
            android:fontFamily="cursive"
            android:layout_margin="8dp"/>
        <Button
            android:id="@+id/add_to_do_items"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:text="Add To Do "
            android:textAllCaps="false"
            android:background="@drawable/roundedbutton"
            android:backgroundTint="@color/colorAccent"
            android:textColor="@android:color/white"/>
        <Button
            android:id="@+id/add_app_pass"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/roundedbutton"
            android:backgroundTint="@android:color/white"
            android:textColor="@color/colorAccent"
            android:text="Save Apps"/>
        <Button
            android:id="@+id/add_some_memories"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:text="Add Som Memories"
            android:textAllCaps="false"
            android:background="@drawable/roundedbutton"
            android:backgroundTint="@color/colorAccent"
            android:textColor="@android:color/white"/>
</LinearLayout>
