<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/addnewapp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.addnewapp.AddNewAppFragment"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_margin="35dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Saving New App!"
        android:layout_gravity="center"
        android:textSize="28sp"
        android:gravity="center"
        android:textColor="@color/colorAccent"
        android:fontFamily="cursive"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add New App"
        android:layout_marginTop="25dp"
        android:gravity="center"
        />
    <androidx.cardview.widget.CardView
        android:layout_width="90dp"
        android:layout_height="110dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="3dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/app"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <EditText
            android:id="@+id/edit_app_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="App Name"
            android:layout_margin="8dp"/>
    <EditText
        android:id="@+id/edit_app_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="User Name"
        android:layout_margin="8dp"/>
        <EditText
            android:id="@+id/edit_app_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="App Password"
            android:layout_margin="8dp"/>
        <CheckBox
            android:id="@+id/checkboxFavApp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="favrioute App?"
            android:layout_gravity="left"/>
        <TextView
            android:id="@+id/text_wrong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"/>
        <Button
            android:id="@+id/btn_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:background="@color/colorAccent"
            android:textColor="@android:color/white"
            android:layout_gravity="right"
            android:textAllCaps="false"/>
    </LinearLayout>
